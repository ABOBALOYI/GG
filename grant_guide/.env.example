# Grant Guide South Africa - Environment Variables
# Copy this file to .env and update values for your environment

# =============================================================================
# Django Settings
# =============================================================================

# Secret key for cryptographic signing (CHANGE IN PRODUCTION!)
# Generate with: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
DJANGO_SECRET_KEY=your-secret-key-here-change-in-production

# Debug mode (set to False in production)
DJANGO_DEBUG=true

# Allowed hosts (comma-separated list)
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1,grantsguide.co.za,www.grantsguide.co.za

# Logging level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
DJANGO_LOG_LEVEL=INFO

# =============================================================================
# PostgreSQL Database
# =============================================================================

# Database name
POSTGRES_DB=grant_guide

# Database user
POSTGRES_USER=grant_guide

# Database password (CHANGE IN PRODUCTION!)
POSTGRES_PASSWORD=grant_guide

# Database host (use 'db' for Docker, 'localhost' for local development)
POSTGRES_HOST=localhost

# Database port
POSTGRES_PORT=5432

# =============================================================================
# Docker Settings
# =============================================================================

# Web application port (default: 8000)
WEB_PORT=8000

# =============================================================================
# Production Settings (uncomment and configure for production)
# =============================================================================

# DJANGO_SECRET_KEY=your-production-secret-key
# DJANGO_DEBUG=False
# DJANGO_ALLOWED_HOSTS=grantsguide.co.za,www.grantsguide.co.za
# POSTGRES_PASSWORD=your-secure-database-password
# DJANGO_LOG_LEVEL=WARNING

# =============================================================================
# Google AdSense (optional)
# =============================================================================

# Google AdSense Client ID (format: ca-pub-XXXXXXXXXXXXXXXX)
# Leave empty to disable ads
GOOGLE_ADSENSE_CLIENT_ID=
